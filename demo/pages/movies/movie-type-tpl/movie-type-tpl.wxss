@import "../movie-tpl/movie-tpl.wxss";
.movie-type-container{
    padding: 30rpx 24rpx;
    background-color: #fff;
    margin-bottom: 30rpx; 
}

.movie-type-head{
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
}

.movie-type-head .title{
    font-size: 14px;
    color: #333;
}

.movie-type-head .more{
    font-size: 12px;
    color: #1f4ba5;
    margin-top: 3rpx;
}
.movie-type-head .more image{
    width: 9rpx;
    height: 16rpx;
    margin-left: 12rpx;
}

.movie-type-group{
    display: flex;
    justify-content: space-between;
}