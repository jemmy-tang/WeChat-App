/* pages/posts/post-detail/post-detail.wxss */

.head-img {
  position: relative;
  width: 100%;
  height: 450rpx;
}

.ban {
  width: 100%;
  height: 100%;
}

.music-ctrl-img {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -50rpx;
  margin-top: -50rpx;
  opacity: 0.5;
}

.post-author-info {
  margin: 24rpx 32rpx;
  display: flex;
  color: #a3a3a3;
  font-size: 12px;
  align-items: center;
}

.post-author-info text {
  margin-right: 10px;
  vertical-align: middle;
}

.author-img {
  width: 32px;
  height: 32px;
  margin-right: 12px;
  vertical-align: middle;
}

.author-name {
  font-size: 14px;
  color: #666;
}

.post-title {
  font-size: 34rpx;
  line-height: 54rpx;
  color: #4b556c;
  font-weight: bold;
  margin-left: 40rpx;
  margin-right: 40rpx;
  letter-spacing: 2rpx;
}

.post-action {
  margin: 20rpx 40rpx;
  display: flex;
  justify-content: flex-end;
  position: relative;
}

.post-action image {
  width: 92rpx;
  height: 92rpx;
  margin-left: 30rpx;
}

.post-action .line {
  height: 1px;
  background-color: #e5e5e5;
  position: absolute;
  width: 100%;
  top: 50%;
  z-index: -1;
}

.post-detail{
    margin: 0 32rpx;
    line-height: 45rpx;
    font-size: 12px;
    color: #666;
    letter-spacing: 2rpx;
}